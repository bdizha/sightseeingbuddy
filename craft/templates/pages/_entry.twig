{% extends "_layouts/master" %}
{% set currentMenuNode = craft.entries.section('mainNavigation').relatedTo(entry).first() %}

{% if currentMenuNode is not null %}
    {% set parentMenuNode = currentMenuNode.getAncestors().first() %}
{% endif %}

{% block head %}
    {{ templateMacros.renderMetaFromEntry(entry) }}
{% endblock %}

{% block content %}

    <section class="gray-block" id="page">
        <div class="container">
            {%- include "_includes/sidebar.twig" -%}
            <div class="col-sm-8 col-sm-offset-1 mt-3">
                <div class="row">
                    <article class="article">
                        <h1 class="page-title page-title-left">{{ entry.displayTitle|raw }}{{ templateMacros.renderEditButton(entry) }}</h1>
                        {{ templateMacros.renderBody(entry.body, guestEntry) }}
                    </article>
{#                    {{  templateMacros.renderButton(entry.body.type('relatedPanel').last().panel.last()) }}#}
                </div>
            </div>
        </div>
    </section>

{% endblock %}
{% set formConfigEntry = craft.entries.section('formConfigs').slug('contact').first() %}

{% extends "_includes/formDefault" %}

{% block formInner %}

  <div class="row">
    <div class="col-md-6">
      {{ craft.fieldProxy.renderField('fromEmail', formConfigEntry, guestEntry)|raw }}
    </div>
    <div class="col-md-6">
      {{ craft.fieldProxy.renderField('formBody', formConfigEntry, guestEntry)|raw }}
    </div>
  </div>
  <button type="submit" class="btn btn-default">
    <span data-submitting-text class="hide"><i class="fa fa-spinner fa-pulse"></i> {{ 'Submitting' | t }}</span>
    <span data-submit-text>{{ submitButtonText | t }}</span>
  </button>


{% endblock %}

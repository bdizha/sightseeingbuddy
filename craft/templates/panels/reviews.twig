<div class="carousel reviews-block">
    <!-- Wrapper for slides -->
    <div data-slick-carousel-default class="carousel-inner">
      {% for slide in reviews %}
          <div class="item {{ loop.first ? "active" : "" }}">
              <div class="review-title">
                  <h3 class="text-bold">
                    {{ slide.title }}
                  </h3>
              </div>
              <div class="review-count"></div>
              <figure class="review-figure" style="background-image: url({{ slide.featureImage.first().getUrl({height:160, quality:80}) }})"></figure>
              <div class="review-byline text-bold">{{ slide.byline }}</div>
              <div class="review-summary">
                  {{ slide.summary | hacksaw(chars='140', append='...') }}
              </div>
          </div>
      {% endfor %}
    </div>
</div>
<div class="row points-block">
    {% for point in points %}
        <div class="point col-md-4 col-sm-6">
            <figure class="point-figure" style="background-image: url({{ point.featureImage.first().getUrl({height:100, quality:80}) }})"></figure>
            <h3 class="text-bold text-center">
                <span>
                    <span class="sub-heading">{{ point.title }}</span>
                </span>
            </h3>
            <p class="text-center text-light">
                {{ point.summary | hacksaw(chars='140', append='...') }}
            </p>
            <div class="step-arrow"></div>
        </div>
    {% endfor %}
</div>
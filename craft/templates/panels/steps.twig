<div class="row steps-block mt-1 mb-1">
    {% for step in entry.steps %}
        <div class="step col-sm-4 col-xs-12">
            <figure class="step-figure" style="background-image: url({{ step.image.first().getUrl({height:160, quality:80}) }})"></figure>
            <h3 class="text-bold text-center">
                <span class="sub-heading">{{ step.displayTitle }}</span>
            </h3>
            <p class="text-center text-light">
                {{ step.summary | hacksaw(chars='140', append='...') }}
            </p>
            <div class="step-arrow"></div>
        </div>
    {% endfor %}
</div>
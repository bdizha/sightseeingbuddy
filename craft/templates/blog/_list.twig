<div class="row vertilize">
    {% set entries = craft.entries.section('blog').limit(3) %}
    {% for entry in entries %}
        <div class="col-md-4 col-sm-4 col-xs-6 col-xs-6-full">
            {{ templateMacros.renderMediaBlockFromEntry(entry, {sharing: false, alignment: "top"}) }}
        </div>
    {% endfor %}
</div>
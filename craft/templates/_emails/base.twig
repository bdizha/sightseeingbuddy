<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">

<html xmlns="http://www.w3.org/1999/xhtml">
<head>
  <meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Email Base</title>
  <style type="text/css">

    body {
      font-family: sans-serif;
      width: 100% !important;
      -webkit-text-size-adjust: 100%;
      -ms-text-size-adjust: 100%;
      margin: 0;
      padding: 0;
      color: #444;
    }

    img {
      outline: none;
      text-decoration: none;
      -ms-interpolation-mode: bicubic;
      display: block;
    }

    a img {
      border: none;
    }

    p {
      margin: 1em 0;
    }

    h1, h3, h4, h5, h6 {
      color: #444 !important;
      font-weight: normal !important;
    }

    h1 a, h2 a, h3 a, h4 a, h5 a, h6 a {
      color: blue !important;
    }

    h1 a:active, h2 a:active, h3 a:active, h4 a:active, h5 a:active, h6 a:active {
      color: red !important;
    }

    h1 a:visited, h2 a:visited, h3 a:visited, h4 a:visited, h5 a:visited, h6 a:visited {
      color: purple !important;
    }

    h2 {
      font-size: 16px;
      line-height: 25px;
      margin: 0 0 1em;
    }

    p {
      font-family: sans-serif;
      font-size: 12px;
      line-height: 18px;
      color: #444444;
    }

    table td {
      border-collapse: collapse;
    }

    table, tr, td {
      border-collapse: collapse;
      vertical-align: top;
      border: 0;
    }

    a {
      color: #4285f4;
    }

    #content {
      margin-top: 30px;
      background: #fff;
      border: 2px solid #efefef;
    }

    .table {
      border: 0;
    }

    .table td {
      border: 0;
      border-top: 1px solid #dddddd;
      padding: 8px 0;
    }

    .table tr:last-child td {
      border-bottom: 1px solid #dddddd;
    }

    #footer {
      font-size: 14px;
    }

  </style>

  <!--[if gte mso 9]>
  <style>
    /* Target Outlook 2007 and 2010 */
  </style>
  <![endif]-->
</head>
<body>
<table id="content" cellpadding="0" cellspacing="0" border="0" align="center" width="600">
  <tr>
    <td valign="top" style="padding: 20px; text-align: center">
      <img src="{{ siteGlobals.siteLogo.first().getUrl({height: 100}) }}" alt="{{ siteName }}" style="display: inline">
    </td>
  </tr>

  <tr>
    <td valign="top" style="padding: 0 20px;">
      {% block content %}{% endblock %}
    </td>
  </tr>
  <tr>
    <td valign="top" style="padding: 20px; text-align: center;" id="footer">
      &copy; {{ now.year }} {{ siteName }}
    </td>
  </tr>
</table>
</body>
</html>
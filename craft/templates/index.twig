{% extends "_layouts/master.twig" %}
{% set currentMenuNode = craft.entries.section('mainNavigation').id(26).first() %}
{% set isHomeEntry = true %}

{% block content %}

    {{  templateMacros.renderPanel(entry.body.type('relatedPanel').first().panel.first()) }}

    <div class="container search-block">
        <form class="search-form">
            <div class="form-group"> 
                <div class="input-group" id="destination">
                    <div class="input-group-addon"></div>
                    <input class="text form-control input-lg fullwidth" type="text" id="fields-destination" name="fields[destination]" value="" data-show-chars-left="" autocomplete="off" placeholder="Your destination">
                </div>
            </div>
            <div class="form-group"> 
                <div class="input-group" id="guests">
                    <div class="input-group-addon"></div>
                    <select class="form-control input-lg" id="fields-guests" name="fields[guests]" value="" data-show-chars-left="" autocomplete="off" placeholder="Amount of guests">
                         <option>Amount of guests</option>
                    </select>
                </div>
            </div>
            <div class="form-group"> 
                <div class="input-group" id="duration">
                    <div class="input-group-addon"></div>
                    <select class="form-control input-lg" id="fields-duration" name="fields[duration]" value="" data-show-chars-left="" autocomplete="off" placeholder="Length of stay">
                        <option>Length of stay</option>
                    </select>
                </div>
            </div>
            <button type="submit" class="btn btn-default btn-lg btn-block">Find a Host</button>
        </form>
    </div>

    <section id='trust-items'>
        <div class="container">
            <h2 class="text-center section-title"> {{ entry.body.type('text').first().text }}</h2>
            {% set points = craft.entries.section('points').limit(3) %}
            {%- include "panels/points.twig" -%}
        </div>
    </section>

    <section class="gray-block" id='how-it-works'>
        <div class="container">
            <h2 class="text-center section-title">How it <b>works</b></h2>
            {{  templateMacros.renderPanel(entry.body.type('relatedPanel').offsetGet(1).panel.first()) }}
            {%- include "panels/steps.twig" -%}
        </div>
    </section>

    <section id="reviews">
        <div class="container">
            <h2 class="text-center section-title">What <b>guests</b> are saying</h2>
            {% set reviews = craft.entries.section('reviews').limit(3) %}
            {%- include "panels/reviews.twig" -%}
        </div>
    </section>

    <section class="gray-block" id="blog">
        <div class="container">
            <h2 class="text-center section-title"><b>Tourism</b> news blog</h2>
            <div class="text-align-center blog-list">
                {%- include "blog/_list.twig" -%}
            </div>
        </div>
    </section>
{% endblock %}
